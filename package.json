{
  "name": "flags-project",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev:ssr": "ng run flags-project:serve-ssr",
    "serve:ssr": "node dist/flags-project/server/main.js",
    "build:ssr": "ng build && ng run flags-project:server",
    "prerender": "ng run flags-project:prerender"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.0.0",
    "@angular/common": "^15.0.0",
    "@angular/compiler": "^15.0.0",
    "@angular/core": "^15.0.0",
    "@angular/forms": "^15.0.0",
    "@angular/platform-browser": "^15.0.0",
    "@angular/platform-browser-dynamic": "^15.0.0",
    "@angular/platform-server": "^15.0.0",
    "@angular/router": "^15.0.0",
    "@ngrx/component-store": "^15.1.0",
    "@nguniversal/express-engine": "^15.2.0",
    "bootstrap": "^5.2.3",
    "express": "^4.15.2",
    "localstorage-polyfill": "^1.0.1",
    "prettier": "^2.8.1",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.0.4",
    "@angular/cli": "~15.0.4",
    "@angular/compiler-cli": "^15.0.0",
    "@nguniversal/builders": "^15.2.0",
    "@types/bootstrap": "^5.2.6",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.2.5",
    "@types/node": "^14.15.0",
    "jest": "^28.1.3",
    "jest-preset-angular": "^12.2.3",
    "typescript": "~4.8.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setupJest.ts"
    ],
    "globalSetup": "jest-preset-angular/global-setup"
  }
}
